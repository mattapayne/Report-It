div.panel.panel-default
    div.panel-heading Organizations
    div.panel-body
        div(ng-controller='OrganizationController').container
            div#organizations-container
                ul
                    li(ng-hide='organizations.length > 0') You have not created any organizations.
                    li(ng-repeat="organization in organizations | orderBy:name:false")
                        span {{organization.name}}
                        div.pull-right
                            a(ng-click='edit($index)', title='Edit this organization', ng-disabled='deleting($index)', ng-hide='editing($index)').btn.btn-default Edit
                            a(ng-click='destroy($index)', title='Delete this organization', ng-disabled='deleting($index)', ng-hide='editing($index)').btn.btn-danger Delete
                        div.clearfix
                        div(ng-show='editing($index)').spacer5
                            div.panel.panel-default
                                div.panel-heading Edit Organization
                                    <button type="button" class="close" aria-hidden="true" ng-click='stopEditing($index)'>&times;</button>
                                div.panel-body
                                    div.form-group
                                        input(type='text', name='name', id='name', placeholder='Organization name', ng-model='organization.name').form-control
                                    div.form-group
                                        div.pull-right
                                            a(ng-click='update($index)').btn.btn-success.btn-xs Update
                        div.clearfix
                    li(ng-show='adding')
                        div.panel.panel-default
                            div.panel-heading Create an Organization
                                 <button type="button" class="close" aria-hidden="true" ng-click='stopAdd()'>&times;</button>
                            div.panel-body
                                div.form-group
                                    input(type='text', name='name', id='name', placeholder='Organization name', ng-model='organizationName').form-control
                                div.form-group
                                    div.pull-right
                                        a(ng-click='create()', title='Create this organization').btn.btn-success.btn-xs Create
                                div.form-group &nbsp;
                    div.clearfix
            a(ng-click='startAdd()', ng-hide='adding', title='Add a new organization', ng-hide='editingAny()').btn.btn-success.pull-right Add