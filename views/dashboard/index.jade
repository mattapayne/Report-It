extends ../layout

block head-css
  link(rel='stylesheet', href='/lib/redactor/redactor.css')

block head-js
  script(type='text/javascript', src='/lib/redactor/redactor.js')
  script(type='text/javascript', src='/lib/redactor/plugins/fontsize/fontsize.js')
  script(type='text/javascript', src='/lib/redactor/plugins/fontcolor/fontcolor.js')
  script(type='text/javascript', src='/lib/redactor/plugins/fontfamily/fontfamily.js')
  script(type='text/javascript', src='/javascripts/angular_common/global_errors.js')
  script(type='text/javascript', src='/javascripts/angular_common/custom_directives.js')
  script(type='text/javascript', src='/javascripts/dashboard/dashboard-app.js')
  script(type='text/javascript', src='/javascripts/dashboard/organizations/controller.js')
  script(type='text/javascript', src='/javascripts/dashboard/organizations/service.js')
  script(type='text/javascript', src='/javascripts/dashboard/snippets/service.js')
  script(type='text/javascript', src='/javascripts/dashboard/snippets/controller.js')
  script(type='text/javascript', src='/javascripts/dashboard/report_templates/service.js')
  script(type='text/javascript', src='/javascripts/dashboard/report_templates/controller.js')
  script(type='text/javascript', src='/javascripts/dashboard/reports/service.js')
  script(type='text/javascript', src='/javascripts/dashboard/reports/controller.js')
  script(type='text/javascript', src='/javascripts/dashboard/settings/service.js')
  script(type='text/javascript', src='/javascripts/dashboard/settings/controller.js')

block content
  div(ng-app='ReportIt.dashboard')
    div(app-messages).messagesList
    div.user-actions.row
      div.col-md-6
        include _reports
        include _report_templates
      div.col-md-6
        include _snippets
        include _organizations
        include _settings
block foot-js